{
  "name": "clinq-crm-bridge-boilerplate-typescript",
  "version": "1.0.0",
  "description": "Boilerplate project to bootstrap a new CLINQ CRM-Bridge in TypeScript.",
  "main": "dist/index.js",
  "repository": "git@github.com:sipgate/clinq-crm-bridge-boilerplate-typescript.git",
  "contributors": [
    {
      "name": "Benjamin Kluck",
      "email": "ben@fug.lu"
    },
    {
      "name": "Felix Gladisch",
      "email": "felix@felixgladisch.de"
    }
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "yarn compile && node dist/index",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "tslint --project tsconfig.json",
    "compile": "./node_modules/typescript/bin/tsc"
  },
  "dependencies": {
    "@clinq/bridge": "^5.0.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.9",
    "express": "^4.16.4",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "tslint",
      "git add"
    ],
    "*.{json,yml,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
